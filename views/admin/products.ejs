<% layout('layouts/main') %>

<div class="admin-top">
  <h2>Quản lý sản phẩm</h2>
  <a href="/admin/products/add" class="btn">+ Thêm sản phẩm</a>
</div>

<table class="admin-table">
  <thead>
    <tr><th>ID</th><th>Ảnh</th><th>Tên</th><th>Danh mục</th><th>Giá</th><th>Tồn kho</th><th>Hành động</th></tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td>
          <% if (p.image) { %>
            <img src="<%= p.image %>" alt="" style="width:80px;height:60px;object-fit:cover">
          <% } else { %>
            <span class="muted">No image</span>
          <% } %>
        </td>
        <td><%= p.name %></td>
        <td><%= p.category_name || '-' %></td>
        <td><%= Number(p.price).toLocaleString() %> ₫</td>
        <td><%= p.stock %></td>
        <td>
          <a href="/admin/products/edit/<%= p.id %>">Sửa</a> |
          <a href="/admin/products/delete/<%= p.id %>" onclick="return confirm('Xóa thật chứ?')">Xóa</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
