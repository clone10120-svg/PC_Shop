<h2>Quản lý sản phẩm</h2>

<a href="/admin/products/add">+ Thêm sản phẩm</a>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Tên</th>
        <th>Giá</th>
        <th>Danh mục</th>
        <th>Hành động</th>
    </tr>

    <% products.forEach(p => { %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.name %></td>
            <td><%= p.price %></td>
            <td><%= p.category_name %></td>
            <td>
                <a href="/admin/products/edit/<%= p.id %>">Sửa</a>
                <a href="/admin/products/delete/<%= p.id %>" onclick="return confirm('Xoá?')">Xoá</a>
            </td>
        </tr>
    <% }) %>
</table>
